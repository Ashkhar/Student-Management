<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        input[type="text"] {
            width: 90%;
            padding: 5px;
            margin: 5px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 8px 16px;
            margin: 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }

        button[type="submit"] {
            background-color: #4CAF50;
            color: white;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
        }

        .delete-btn:hover {
            background-color: #d32f2f;
        }

        .update-btn:hover {
            background-color: #45a049;
        }

        .form-container {
            width: 80%;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-container div {
            margin-bottom: 15px;
        }

        label {
            margin-right: 10px;
            font-weight: bold;
        }

        .form-container button[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
        }

        .form-container button[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Student Management System</h1>

    <!-- Table for displaying and updating student records -->
    <table>
        <thead>
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>Degree</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student) => { %>
                <tr>
                    <!-- Form to update a student -->
                    <form action="/update/<%= student._id %>" method="post">
                        <td><input type="text" name="rollno" value="<%= student.rollno %>" /></td>
                        <td><input type="text" name="name" value="<%= student.name %>" /></td>
                        <td><input type="text" name="degree" value="<%= student.degree %>" /></td>
                        <td><input type="text" name="city" value="<%= student.city %>" /></td>
                        <td>
                            <button type="submit" class="update-btn">Update</button>
                    </form>
                    <!-- Separate form to delete a student -->
                    <form action="/delete/<%= student._id %>" method="post" style="display:inline;">
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Form for adding a new student -->
    <div class="form-container">
        <h2>Add New Student</h2>
        <form action="/save" method="post">
            <div>
                <label for="rollno">Roll No:</label>
                <input type="text" name="rollno" id="rollno" required>
            </div>
            <div>
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" required>
            </div>
            <div>
                <label for="degree">Degree:</label>
                <input type="text" name="degree" id="degree" required>
            </div>
            <div>
                <label for="city">City:</label>
                <input type="text" name="city" id="city" required>
            </div>
            <div>
                <button type="submit">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
